files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Simplified proxy configuration for Flask app
      
      upstream tradingapp_backend {
          server 127.0.0.1:8000;
      }
      
      server {
          listen 80;
          server_name _;
          
          client_max_body_size 10M;
          
          location / {
              proxy_pass http://tradingapp_backend;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
              
              proxy_connect_timeout 60;
              proxy_send_timeout 60;
              proxy_read_timeout 60;
          }
      }

container_commands:
  01_remove_default_nginx:
    command: "rm -f /etc/nginx/conf.d/default.conf"
    ignoreErrors: true
  02_check_nginx_status:
    command: "systemctl is-active nginx || echo 'nginx not running'"
    ignoreErrors: true
  03_test_nginx_config:
    command: "nginx -t"
  04_start_nginx_if_stopped:
    command: "systemctl start nginx || echo 'nginx start failed'"
    ignoreErrors: true
  05_restart_nginx:
    command: "systemctl restart nginx || service nginx restart || echo 'nginx restart failed'"
    ignoreErrors: true
  06_verify_nginx_running:
    command: "systemctl is-active nginx && echo 'nginx is running' || echo 'nginx failed to start'"
    ignoreErrors: true 