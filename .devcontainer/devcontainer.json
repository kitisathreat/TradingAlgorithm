{
  "name": "Python 3",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "0_Launchers/flask_web/flask_app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "cd 0_Launchers/flask_web && python flask_app.py"
  },
  "portsAttributes": {
    "5000": {
      "label": "Flask Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    5000
  ]
}